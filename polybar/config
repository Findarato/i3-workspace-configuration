[colors]
background = #00ffffff
background-alt = #26444445
foreground = #B31d1f21
foreground-alt = #591d1f21
primary = #81a2be
secondary = #B3518965
alert = #cc6666

[bar/left]
primary = ${colors.primary}
secondary = ${colors.secondary}
foreground-alt = ${colors.foreground-alt}

monitor = ${env:MONITOR:}
monitor-fallback = ${env:MONITOR:DP-0}
width = 100%
height = 27
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 9
border-color = #00000000

padding-left = 0
padding-right = 3

module-margin-left = 1
module-margin-right = 2

font-0 = DroidSansMonoForPowerline:size=11;0
font-1 = MaterialIcons:size=13;1
font-2 = WuconSiji:pixelsize=10;0

modules-left =
modules-center = i3
modules-right = wlan memory cpu date

tray-position =

cursor-click = pointer
cursor-scroll = ns-resize

[bar/right]
inherit = bar/left

modules-left = spotify
modules-right =

padding-left = 3

[module/spotify]
type = custom/script
exec = $HOME/.config/i3/polybar/modules/spotify.sh
label = %output%
format = <label>
click-left = playerctl --player=spotify play-pause
tail = true

[module/i3]
type = internal/i3
format-workspaces = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
label-mode-padding = 1
label-mode-foreground = ${colors.alert}

; focused = Active workspace on focused monitor
label-focused = 
label-focused-padding = 2
label-focused-foreground = ${colors.secondary}

; unfocused = Inactive workspace on any monitor
label-unfocused = 
label-unfocused-padding = 2
label-unfocused-foreground = ${colors.foreground-alt}

; visible = Active workspace on unfocused monitor
label-visible = 
label-visible-padding = 2
label-visible-foreground = ${colors.primary}

; urgent = Workspace with urgency hint set
label-urgent = 
label-urgent-padding = 2 
label-urgent-foreground = ${colors.alert}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = 
format-prefix-foreground = ${colors.primary}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = 
format-prefix-foreground = ${colors.primary}
format-prefix-padding-right = 1
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp5s0
interval = 3.0

label-connected = %essid%
format-connected-prefix = 
format-connected-prefix-foreground = ${colors.foreground-alt}
format-connected-prefix-padding-right = 1
format-connected-prefix-margin-top = -2
format-connected = <label-connected>
format-disconnected-prefix = 
format-disconnected-prefix-foreground = ${colors.alert}
format-disconnected = <label-disconnected>

[module/date]
type = internal/date
interval = 5

date = " %A, %B %d"
date-alt = " %X"

time = "%I:%M %p"
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
label = %date% %time%

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

